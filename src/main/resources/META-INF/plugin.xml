<idea-plugin>
    <id>com.qbutton.Flashlight</id>
    <name>Flashlight</name>
    <vendor email="mr.arsok@gmail.com">Developer</vendor>

    <description><![CDATA[
    Is it too dark? <br>
    Maybe you want to lighten things up a little? <br>
    Now you can do it right from your favourite IDE! <br>
    Flashlight will appear in Tools menu <br> <br>
    <i> Awesome icon was made by
    <a href="https://flaticon.com/free-icon/flashlight_1471561" title="photo3idea_studio">photo3idea_studio</a> from
        <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
    </i>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <group id="Flashlight.FlashlightMenu" text="Flashlight" description="Flashlight">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="Flashlight.ShowFlashlightPopupAction" class="com.qbutton.action.ShowFlashlightPopupAction"
                    text="Flashlight" icon="AllIcons.Actions.IntentionBulb" description="Open flashlight"/>
        </group>
    </actions>
</idea-plugin>